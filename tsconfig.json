{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        // "noImplicitAny": true,
        "lib": [
            "esnext",
            "ESNext.Array"
        ]
